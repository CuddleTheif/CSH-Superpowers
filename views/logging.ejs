<!DOCTYPE html>
<html>
  <head>
    <title>CSH Superpowers Login</title>
  </head>
  <body>
    <img src="https://upload.wikimedia.org/wikipedia/commons/2/28/InternetSlowdown_Day.gif" height=50vh />
    <script>
      function checkLogin() {
        var request = new XMLHttpRequest();
        request.onreadystatechange = function() {
          if (request.readyState == 4 && request.status == 200) {
            if(request.responseText==="false")
              checkLogin();
            else
              document.location = '/';
          }
        };
        request.open("POST", "login", true);
        request.send();
      }
      checkLogin();
    </script>
  </body>
</html>
